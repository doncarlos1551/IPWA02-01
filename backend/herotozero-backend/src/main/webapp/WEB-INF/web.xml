<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Sicherheitsbeschränkung definieren -->
    <security-constraint>
	    <web-resource-collection>
	        <web-resource-name>Beschützter Bereich</web-resource-name>
	        <!-- Anpassung des URL-Patterns, um Ihre API-Pfade abzudecken -->
	        <url-pattern>/api/test/*</url-pattern>
	    </web-resource-collection>
	    <auth-constraint>
	        <role-name>Admin</role-name>
	    </auth-constraint>
	</security-constraint>
    <!-- Sicherheitsrolle definieren -->
    <security-role>
        <role-name>Admin</role-name>
    </security-role>

    <!-- Login-Konfiguration -->
    <login-config>
        <!-- Authentifizierungsmethode -->
        <auth-method>MP-JWT</auth-method>
        <!-- Verweis auf die Sicherheitsdomain -->
        <realm-name>ApplicationDomain</realm-name>
    </login-config>

    <!-- Andere Konfigurationen -->

</web-app>
